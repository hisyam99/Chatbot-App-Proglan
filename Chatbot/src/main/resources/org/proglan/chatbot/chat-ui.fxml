<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="600.0" prefWidth="400.0"
            style="-fx-background-color: #f2f2f2;" xmlns="http://javafx.com/javafx/17.0.2-ea"
            fx:controller="org.proglan.chatbot.ChatbotController">

    <!-- Top Section -->
    <top>
        <BorderPane style="-fx-background-color: #3498db;">
            <right>
                <HBox alignment="CENTER_RIGHT" style="-fx-padding: 10px;">
                    <Button onAction="#showAboutInfo" style="-fx-background-color: transparent;">
                        <graphic>
                            <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                <Image url="@about_icon.png"/>
                            </ImageView>
                        </graphic>
                    </Button>
                </HBox>
            </right>
            <center>
                <VBox alignment="CENTER" style="-fx-padding: 10px;">
                    <Label style="-fx-font-size: 24px; -fx-text-fill: white; -fx-font-weight: bold;" text="ChatBot"/>
                </VBox>
            </center>
        </BorderPane>
    </top>

    <!-- Center Section: Chat Area -->
    <center>
        <StackPane>
            <ScrollPane fitToHeight="true" fitToWidth="true">
                <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20px;">
                    <TextArea fx:id="chatArea" editable="false" wrapText="true" VBox.vgrow="ALWAYS"/>
                </VBox>
            </ScrollPane>
        </StackPane>
    </center>

    <!-- Bottom Section: User Input and Buttons -->
    <bottom>
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20px;">
            <HBox alignment="CENTER" spacing="10">
                <TextField fx:id="userInput" promptText="Type a message..." HBox.hgrow="ALWAYS"/>
                <Button fx:id="sendButton" onAction="#sendMessage"
                        style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Send"/>
                <ProgressIndicator fx:id="cancelProgressIndicator" managed="false" visible="false"/>
                <ProgressIndicator fx:id="progressIndicator" managed="false" visible="false"/>
            </HBox>
        </VBox>
    </bottom>

</BorderPane>