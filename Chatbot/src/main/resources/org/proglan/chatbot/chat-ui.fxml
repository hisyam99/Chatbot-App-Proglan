<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="600.0" prefWidth="400.0"
            style="-fx-background-color: #263238;" xmlns="http://javafx.com/javafx/21"
            fx:controller="org.proglan.chatbot.ChatbotController">

    <!-- Top Section -->
    <top>
        <BorderPane style="-fx-background-color: #37474f;">
            <right>
                <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 10px;">
                    <ToggleButton fx:id="themeSwitch" onAction="#toggleTheme"
                                  style="-fx-background-color: transparent;">
                        <graphic>
                            <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                <Image url="@theme_icon.png"/>
                            </ImageView>
                        </graphic>
                    </ToggleButton>
                    <Button onAction="#showAboutInfo" style="-fx-background-color: transparent;">
                        <graphic>
                            <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                <Image url="@about_icon.png"/>
                            </ImageView>
                        </graphic>
                    </Button>
                </HBox>
            </right>
            <center>
                <VBox style="-fx-padding: 10px;">
                    <Label style="-fx-font-size: 24px; -fx-text-fill: white; -fx-font-weight: bold;" text="ChatBot"/>
                </VBox>
            </center>
        </BorderPane>
    </top>

    <!-- Center Section: Chat Area -->
    <center>
        <StackPane>
            <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-padding: 0;">
                <content>
                    <TextArea fx:id="chatArea" editable="false"
                              style="-fx-control-inner-background:#455a64; -fx-text-fill: white;" wrapText="true"/>
                </content>
            </ScrollPane>
        </StackPane>
    </center>

    <!-- Bottom Section: User Input and Buttons -->
    <bottom>
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20px;" minHeight="65.0" maxHeight="65.0">
            <HBox alignment="CENTER" spacing="10">
                <TextField fx:id="userInput" promptText="Type a message..."
                           style="-fx-background-color: #546e7a; -fx-text-fill: white;" HBox.hgrow="ALWAYS"/>
                <Button fx:id="sendButton" onAction="#sendMessage"
                        style="-fx-background-color: #2196f3; -fx-text-fill: white;" text="Send"/>
                <ProgressIndicator fx:id="cancelProgressIndicator" managed="false" visible="false"/>
                <ProgressIndicator fx:id="progressIndicator" managed="false" visible="false"/>
            </HBox>
        </VBox>
    </bottom>

</BorderPane>
