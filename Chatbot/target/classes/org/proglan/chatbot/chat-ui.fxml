<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.proglan.chatbot.ChatbotController"
            prefHeight="600.0" prefWidth="400.0" style="-fx-background-color: #f2f2f2;">

  <top>
    <VBox alignment="CENTER" style="-fx-background-color: #3498db; -fx-padding: 10px;">
      <Label text="ChatBot" style="-fx-font-size: 24px; -fx-text-fill: white; -fx-font-weight: bold;" />
    </VBox>
  </top>

  <center>
    <StackPane>
      <ScrollPane fitToWidth="true" fitToHeight="true">
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20px;">
          <TextArea fx:id="chatArea" editable="false" prefWidth="300.0" wrapText="true" />
        </VBox>
      </ScrollPane>
    </StackPane>
  </center>

  <bottom>
    <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20px;">
      <HBox alignment="CENTER" spacing="10">
        <TextField fx:id="userInput" promptText="Type a message..." prefWidth="200.0" HBox.hgrow="ALWAYS" />
        <Button text="Send" style="-fx-background-color: #3498db; -fx-text-fill: white;" onAction="#sendMessage" />
        <HBox spacing="5" alignment="CENTER_RIGHT">
          <Button text="Cancel" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" onAction="#cancelRequest" />
          <ProgressIndicator fx:id="cancelProgressIndicator" visible="false" managed="false" />
        </HBox>
        <ProgressIndicator fx:id="progressIndicator" visible="false" managed="false" />
      </HBox>
    </VBox>
  </bottom>

</BorderPane>