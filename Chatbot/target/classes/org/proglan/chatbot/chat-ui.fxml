<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane prefHeight="600.0" prefWidth="400.0" style="-fx-background-color: #f2f2f2;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.proglan.chatbot.ChatbotController">

  <!-- Top Section -->
  <top>
    <VBox alignment="CENTER" style="-fx-background-color: #3498db; -fx-padding: 10px;">
      <Label text="ChatBot" style="-fx-font-size: 24px; -fx-text-fill: white; -fx-font-weight: bold;" />
    </VBox>
  </top>

  <!-- Center Section: Chat Area -->
  <center>
    <StackPane>
      <ScrollPane fitToHeight="true" fitToWidth="true">
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20px;">
          <TextArea fx:id="chatArea" editable="false" wrapText="true" VBox.vgrow="ALWAYS" />
        </VBox>
      </ScrollPane>
    </StackPane>
  </center>

  <!-- Bottom Section: User Input and Buttons -->
  <bottom>
    <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20px;">
      <HBox alignment="CENTER" spacing="10">
        <TextField fx:id="userInput" prefWidth="200.0" promptText="Type a message..." HBox.hgrow="ALWAYS" />
        <Button onAction="#sendMessage" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Send" />
        <HBox alignment="CENTER_RIGHT" spacing="5">
          <Button onAction="#cancelRequest" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Cancel" />
          <ProgressIndicator fx:id="cancelProgressIndicator" managed="false" visible="false" />
        </HBox>
        <ProgressIndicator fx:id="progressIndicator" managed="false" visible="false" />
      </HBox>
    </VBox>
  </bottom>

</BorderPane>